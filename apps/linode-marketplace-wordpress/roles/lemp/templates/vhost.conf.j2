# upstream to abstract backend connection(s) for php
upstream php {
        server unix:/tmp/php-cgi.socket;
        server 127.0.0.1:9000;
}

server {
    listen 80;
    listen [::]:80;
    {% if domain and subdomain != "www" %}
    server_name {{ _domain }};
    {% else %}
    server_name {{_domain}} www.{{ _domain }};
    {% endif %}
    include snippets/well-known;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;
    {% if domain and subdomain != "www" %}
    server_name {{ _domain }};
    {% else %}
    server_name {{_domain}} www.{{ _domain }};
    {% endif %}
    include snippets/well-known;
    include snippets/ssl.conf;
    include snippets/ssl-params.conf;
    root /var/www/html/{{ _domain }};
    index index.php;
    
    # logging
    access_log /var/log/nginx/{{ _domain }}/access.log;
    error_log /var/log/nginx/{{ _domain }}/error.log;

    # max php upload size
    client_max_body_size 100M;
  
    # disable direcory indexing
    autoindex off;

    # locaton restrictions
    include snippets/restrictions.conf;
    
    # other location rules
    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    # wordpress location rules
    include snippets/wordpress.conf;
}